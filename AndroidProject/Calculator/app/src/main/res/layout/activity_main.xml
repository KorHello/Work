<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.6">

        <EditText
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:id="@+id/edt_inputNumber"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="30sp"
            android:hint="hint"
            android:textColorHint="#ffffff"
            android:textColor="#ffffff"
            android:gravity="right"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.7">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="#0F1410"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btn_delete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bt_corner_orange"
            android:layout_margin="5dp"
            android:textColor="#fff"
            android:text="DELETE"
            android:textSize="20dp"
            android:layout_weight="2"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_number7"
                android:tag="7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bt_corner_lightgray"
                android:layout_margin="5dp"
                android:textColor="#fff"
                android:text="7"
                android:textSize="45dp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/btn_number8"
                android:tag="8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/bt_corner_lightgray"
                android:textColor="#fff"
                android:text="8"
                android:textSize="50dp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/btn_number9"
                android:tag="9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bt_corner_lightgray"
                android:textColor="#fff"
                android:layout_margin="5dp"
                android:text="9"
                android:textSize="45dp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/btn_division"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bt_corner_gray"
                android:textColor="#fff"
                android:layout_margin="5dp"
                android:text="/"
                android:textSize="45dp"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_number4"
                android:tag="4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bt_corner_lightgray"
                android:layout_margin="5dp"
                android:textColor="#fff"
                android:text="4"
                android:textSize="45dp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/btn_number5"
                android:tag="5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bt_corner_lightgray"
                android:textColor="#fff"
                android:layout_margin="5dp"
                android:text="5"
                android:textSize="45dp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/btn_number6"
                android:tag="6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bt_corner_lightgray"
                android:layout_margin="5dp"
                android:textColor="#fff"
                android:text="6"
                android:textSize="45dp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/btn_multiple"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bt_corner_gray"
                android:textColor="#fff"
                android:layout_margin="5dp"
                android:text="x"
                android:textSize="40dp"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_number1"
                android:tag="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bt_corner_lightgray"
                android:layout_margin="5dp"
                android:textColor="#fff"
                android:text="1"
                android:textSize="45dp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/btn_number2"
                android:tag="2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bt_corner_lightgray"
                android:layout_margin="5dp"
                android:textColor="#fff"
                android:text="2"
                android:textSize="45dp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/btn_number3"
                android:tag="3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bt_corner_lightgray"
                android:layout_margin="5dp"
                android:textColor="#fff"
                android:text="3"
                android:textSize="45dp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/btn_minus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bt_corner_gray"
                android:layout_margin="5dp"
                android:textColor="#fff"
                android:text="-"
                android:textSize="50dp"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_dot"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bt_corner_gray"
                android:layout_margin="5dp"
                android:textColor="#fff"
                android:text="."
                android:textSize="45dp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/btn_number0"
                android:tag="0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bt_corner_gray"
                android:textColor="#fff"
                android:layout_margin="5dp"
                android:text="0"
                android:textSize="45dp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/btn_result"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bt_corner_orange"
                android:layout_margin="5dp"
                android:textColor="#fff"
                android:text="="
                android:textSize="45dp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/btn_plus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bt_corner_gray"
                android:layout_margin="5dp"
                android:textColor="#fff"
                android:text="+"
                android:textSize="45dp"
                android:layout_weight="1"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>